<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jpallete_main_grey"
    android:id="@+id/live_root_layout">


    <TextView
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="If you dont see any threads, try swiping up and down"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:id="@+id/live_thread_number"
        android:textSize="25dp"
        android:textColor="@color/wpallete_complementary_green"
        android:gravity="center"
        android:background="@drawable/greybox"
        android:layout_alignTop="@+id/live_thread_infoLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left|bottom"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        />

    <fr.castorflex.android.verticalviewpager.VerticalViewPager
         android:id="@+id/live_thread_pager"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_gravity="right|center_vertical">

     </fr.castorflex.android.verticalviewpager.VerticalViewPager>

    <com.jokrapp.android.view.ExpandableLayout
        android:id="@+id/localexpandable"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        expandable:el_headerLayout="@layout/live_header_layout"
        expandable:el_contentLayout="@layout/live_content_layout"
        android:layout_gravity="bottom|left" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="center_horizontal|bottom"
        android:indeterminate="false"
        android:progress="50"
        android:layout_marginBottom="50dp"
        android:progressTint="#00000000"
        android:visibility="invisible" />

</FrameLayout>