<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/layout_reply_new_reply">

    <EditText
        style="@style/liveTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText_reply_mode_comment"
        android:hint="Comment"
        android:layout_above="@+id/button_camera_reply_mode_confirm"
        android:textSize="20dp"
        android:gravity="center" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Confirm"
        android:id="@+id/button_camera_reply_mode_confirm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/camera_live_mode_button_base"
        android:textSize="20dp"
        android:textColor="@color/wpallete_neutral_gray" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button_camera_reply_mode_cancel"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="150dp"
        android:layout_marginEnd="150dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/camera_live_mode_button_base"
        android:layout_alignTop="@+id/button_camera_reply_mode_confirm"
        android:textColor="@color/wpallete_neutral_gray"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Image"
        android:id="@+id/button_camera_reply_mode_add_image"
        android:layout_below="@+id/editText_live_mode_description"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>