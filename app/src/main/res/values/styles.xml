<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
       <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="StashTheme" parent="@android:style/Theme.Holo">
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="radicalContentButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:onClick">onNotImplemented</item>
    </style>

    <style name="liveTextStyle">
        <item name="android:textColor">@color/jpallete_neutral_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="commentBoxStyle">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/ic_comment</item>
        <item name="android:layout_marginRight">@dimen/side_screen_margin</item>
        <item name="android:layout_marginLeft">@dimen/side_screen_margin</item>
        <item name="android:layout_marginStart">@dimen/side_screen_margin</item>
        <item name="android:layout_marginEnd">@dimen/side_screen_margin</item>
    </style>

    <style name="localCaptionStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/ic_comment</item>
    </style>

    <style name="nameTextStyle">
        <item name="android:textColor">@color/jpallete_accent_peach</item>
    </style>




</resources>