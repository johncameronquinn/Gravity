<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pallete_accent_gray"
    android:id="@+id/layout_reply_root"
    tools:context="com.jokrapp.android.ReplyFragment">


    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/reply_list_view"
        android:dividerHeight="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_new_reply"
        android:layout_alignEnd="@+id/button_new_reply" />


    <com.jokrapp.android.view.ExpandableLayout
        android:id="@+id/replyexpandable"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        expandable:el_headerLayout="@layout/live_header_layout"
        expandable:el_contentLayout="@layout/reply_content_layout"
        android:layout_alignParentBottom="true"/>


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/replySeekBar"
        android:layout_gravity="center_horizontal|bottom"
        android:indeterminate="false"
        android:progress="50"
        android:progressTint="#00000000"
        android:visibility="invisible"
        android:layout_alignTop="@+id/button_new_reply"
        android:layout_alignRight="@+id/button_new_reply"
        android:layout_alignEnd="@+id/button_new_reply" />



</RelativeLayout>
