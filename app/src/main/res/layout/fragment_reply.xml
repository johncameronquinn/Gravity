<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pallete_accent_gray"
    android:id="@+id/layout_reply_root"
    tools:context="com.jokrapp.android.ReplyFragment">


    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reply_list_view"
        android:layout_alignBottom="@+id/button_new_reply"
        android:layout_alignRight="@+id/button_new_reply"
        android:layout_alignEnd="@+id/button_new_reply" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/button_new_reply"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|bottom"
        android:src="@drawable/new_reply" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/replySeekBar"
        android:layout_gravity="center_horizontal|bottom"
        android:indeterminate="false"
        android:progress="50"
        android:progressTint="#00000000"
        android:visibility="invisible"
        android:layout_alignTop="@+id/button_new_reply"
        android:layout_alignRight="@+id/button_new_reply"
        android:layout_alignEnd="@+id/button_new_reply" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_reply_refresh"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
