<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.jokrapp.android.CameraFragment"
    android:background="@color/pallete_accent_gray"
    android:id="@+id/camera_root">

    <TextureView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cameraSurfaceView"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:text="live"
        android:background="@drawable/capturebutton3"
        android:id="@+id/button_live"
        android:layout_gravity="end|bottom"
        android:visibility="invisible"
        android:alpha=".5"
        android:layout_margin="30dp"
        android:textColor="#ffff74d4" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentText"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/pallete_accent_blue_alpha"
        android:visibility="invisible"
        android:textColor="@color/pallete_accent_gray"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_capture"
        android:contentDescription="@string/capture_button_desc"
        android:background="@drawable/capturebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center|bottom"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:alpha=".5"
        android:visibility="visible" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button_cancel_message"
        android:layout_gravity="center_horizontal|top"
        android:visibility="invisible"
        android:background="@drawable/cancel"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="Cancel"
        android:background="@drawable/capturebutton3"
        android:id="@+id/button_cancel"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="invisible"
        android:alpha=".5"
        android:layout_margin="30dp"
        android:textColor="#ffff34b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:text="Local"
        android:background="@drawable/capturebutton3"
        android:id="@+id/button_local"
        android:layout_gravity="left|bottom"
        android:visibility="invisible"
        android:alpha=".5"
        android:layout_margin="30dp"
        android:textColor="#ffff56cd" />

    <Button
        android:layout_width="59dp"
        android:layout_height="84dp"
        android:background="@drawable/switchcamera50"
        android:id="@+id/switch_camera"
        android:layout_gravity="right|bottom"
        android:alpha=".7"
        android:layout_margin="10dp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SendMessage"
        android:id="@+id/button_send_message"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="invisible"
        android:layout_marginBottom="15dp"
        android:alpha=".7" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_flash"
        android:onClick="setFlash"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:button="@drawable/custom_flash"
        android:layout_marginBottom="12dp"
        android:visibility="visible" />

</FrameLayout>
