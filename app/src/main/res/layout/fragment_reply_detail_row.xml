<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:gravity="top"
    android:background="@drawable/greybox"
    android:padding="5dp"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="unixtime"
        android:id="@+id/reply_detail_row_time"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"/>


    <TextView
        android:id="@+id/reply_detail_row_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center_vertical|left"
        android:padding="2dp"
        android:text="comment text goes here"
        android:layout_below="@+id/reply_detail_row_time"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/reply_detail_row_image">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="jester"
        android:id="@+id/reply_detail_row_name"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/reply_detail_row_image"
        android:layout_alignParentLeft="false" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/reply_detail_row_image"
        android:visibility="gone"
        android:background="@color/wpallete_accent_blue_alpha"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>