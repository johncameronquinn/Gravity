<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
       <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:colorBackground">@color/cyber_background</item>
        <item name="android:colorForeground">@color/cyber_black</item>
        <item name="android:textColorPrimary">@color/cyber_light_blue</item>
        <item name="android:windowBackground">@color/cyber_background</item>
        <item name="android:textColorSecondary">@color/cyber_dark_orange</item>
        <item name="android:textColorPrimaryInverse">@color/cyber_light_orange</item>
        <item name="android:textColorSecondaryInverse">@color/cyber_light_orange</item>
    </style>

    <style name="StashTheme" parent="@android:style/Theme.Holo">
    </style>

    <style name="FabNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">onNotImplemented</item>
        <item name="fab_size">normal</item>
        <item name="fab_colorNormal">@color/cyber_dark_blue</item>
        <item name="fab_colorPressed">@color/cyber_light_blue</item>
        <item name="fab_colorRipple">@color/cyber_light_blue</item>
    </style>

    <style name="LiveFabMenu">
        <item name="menu_shadowColor">#444</item>
        <item name="menu_colorNormal">@color/cyber_dark_blue</item>
        <item name="menu_colorPressed">@color/cyber_light_blue</item>
        <item name="menu_colorRipple">@color/cyber_grey</item>
        <item name="menu_labels_position">right</item>
        <item name="menu_backgroundColor">#64000000</item>
        <item name="menu_labels_colorNormal">@color/clear_background</item>
        <item name="menu_labels_showShadow">false</item>
        <item name="menu_animationDelayPerItem">30</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="radicalContentButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:onClick">onNotImplemented</item>
    </style>

    <style name="liveTextStyle">
       <!-- <item name="android:textColor">@color/jpallete_neutral_green</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="commentBoxStyle">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/ic_comment</item>
        <item name="android:layout_marginRight">@dimen/side_screen_margin</item>
        <item name="android:layout_marginLeft">@dimen/side_screen_margin</item>
        <item name="android:layout_marginStart">@dimen/side_screen_margin</item>
        <item name="android:layout_marginEnd">@dimen/side_screen_margin</item>
    </style>

    <style name="localCaptionStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/ic_comment</item>
    </style>

    <style name="nameTextStyle">
        <!--<item name="android:textColor">@color/jpallete_accent_peach</item>-->
    </style>




</resources>