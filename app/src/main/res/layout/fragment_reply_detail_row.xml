<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:gravity="top"
    android:background="@drawable/rectangle"
    android:visibility="visible"
    android:padding="5dp">


    <com.jokrapp.android.PhotoView
        android:id="@+id/thumbImage" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/reply_detail_row_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center_vertical|left"
        android:padding="2dp"
        android:text="comment text goes here"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:textColor="@color/jpallete_main_grey"
        android:layout_toRightOf="@+id/thumbImage"
        android:layout_toStartOf="@+id/linearLayout"
        android:layout_below="@+id/thumbImage">
    </TextView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/thumbImage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="unixtime"
            android:id="@+id/reply_detail_row_time"
            android:layout_gravity="right"
            android:layout_below="@+id/reply_detail_row_name"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:text="jester"
            android:id="@+id/reply_detail_row_name"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/cyber_grey" />

    </LinearLayout>

</RelativeLayout>