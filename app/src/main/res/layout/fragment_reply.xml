<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyber_background"
    android:id="@+id/layout_reply_root"
    tools:context="us.gravwith.android.ReplyFragment">

    <ListView
        style="@style/GravityListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reply_list_view"
        android:dividerHeight="2dp"
        android:clipToPadding="false"
        android:paddingBottom="93dp"
        android:layout_alignParentTop="true"
        android:stackFromBottom="true"
        android:transcriptMode="normal"/>


    <com.github.clans.fab.FloatingActionMenu
        style="@style/LiveFabMenu"
        android:id="@+id/reply_radical_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/radical_transition"
        fab:menu_icon="@drawable/ic_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.github.clans.fab.FloatingActionButton
            style="@style/FabNormal"
            android:id="@+id/button_reply_report"
            android:src="@drawable/ic_report" />

        <com.github.clans.fab.FloatingActionButton
            style="@style/FabNormal"
            android:id="@+id/button_reply_refresh"
            android:src="@drawable/ic_refresh"/>
       <!-- <com.github.clans.fab.FloatingActionButton
            style="@style/FabNormal"
            android:id="@+id/button_reply_capture"
            fab:fab_label="Add Image"/>-->

    </com.github.clans.fab.FloatingActionMenu>


    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/reply_texting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/side_screen_margin"
        android:layout_marginBottom="@dimen/side_screen_margin"
        android:layout_marginLeft="@dimen/local_card_margin">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_reply_comment"
            android:layout_toStartOf="@+id/button_send_reply"
            android:layout_marginLeft="5dp"
            android:hint="comment"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />

        <!--<Button
            android:id="@+id/button_send_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"
            android:layout_alignParentEnd="true"
            android:background="@drawable/reply_button_background"
            android:layout_alignParentStart="false"
            android:textColor="@color/cyber_darker_blue"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp" /-->

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_send_reply"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:enabled="false"
            fab:fab_size="mini"
            fab:fab_showShadow="true"
            fab:fab_colorDisabled="@color/cyber_grey"
            fab:fab_colorNormal="@color/cyber_dark_blue"
            fab:fab_colorPressed="@color/cyber_light_blue"
            fab:fab_colorRipple="@color/cyber_light_blue"
            android:src="@drawable/ic_quick_send" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_reply_error"
        android:visibility="visible"
        android:autoText="false"
        android:layout_marginTop="@dimen/side_screen_margin"
        android:gravity="center"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
