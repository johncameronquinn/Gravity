<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.jokrapp.android.ImageCursorAdapterView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageAdapter"
        android:background="@color/pallete_accent_gray">
    </com.jokrapp.android.ImageCursorAdapterView>


    <com.jokrapp.android.ExpandableLayout
        android:id="@+id/localexpandable"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        expandable:el_headerLayout="@layout/local_header_layout"
        expandable:el_contentLayout="@layout/local_content_layout"
        android:layout_gravity="bottom|right" />



</FrameLayout>