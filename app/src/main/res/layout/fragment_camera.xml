<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.jokrapp.android.CameraFragment"
    android:background="@color/jpallete_main_grey"
    android:id="@+id/camera_root">

    <TextureView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cameraSurfaceView"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_camera_sendtolive"
        android:id="@+id/button_live"
        android:layout_gravity="end|bottom"
        android:visibility="invisible"
        android:layout_margin="40dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentText"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:visibility="invisible"
        android:textSize="22dp"
        android:layout_marginBottom="10dp"
        android:hint="Caption" />

    <Button
        android:id="@+id/button_capture"
        android:contentDescription="@string/capture_button_desc"
        android:background="@drawable/ic_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center|bottom"
        android:alpha=".5"
        android:visibility="visible" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button_cancel_message"
        android:layout_gravity="center_horizontal|top"
        android:visibility="invisible"
        android:background="@drawable/ic_cancel"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cancel"
        android:id="@+id/button_cancel"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="invisible"
        android:layout_marginBottom="70dp"
        android:textColor="#ffff34b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_camera_sendtolocal"
        android:id="@+id/button_local"
        android:layout_gravity="left|bottom"
        android:visibility="invisible"
        android:layout_margin="40dp" />

    <Button
        android:layout_width="59dp"
        android:layout_height="84dp"
        android:background="@drawable/switchcamera50"
        android:id="@+id/switch_camera"
        android:layout_gravity="right|bottom"
        android:alpha=".7"
        android:layout_margin="10dp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_send_message"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/local_card_margin"
        android:background="@drawable/ic_camera_confirm"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_flash"
        android:onClick="setFlash"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:button="@drawable/custom_flash"
        android:layout_marginBottom="12dp"
        android:visibility="visible" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/camera_focus"
        android:background="@drawable/focus"
        android:visibility="invisible"
        android:gravity="center"
        android:tint="@color/jpallete_neutral_blue"/>

</FrameLayout>
