<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_local_block"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/block"
        android:background="@color/clear_background"
        android:onClick="onLocalBlockPressed"
        android:layout_below="@+id/button_local_message" />

    <ImageButton
        android:id="@+id/button_local_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:onClick="onLocalMessagePressed"
        android:background="@color/clear_background"
        android:src="@drawable/message"/>

</RelativeLayout>